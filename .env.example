# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/ai_memory_bank
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
REDIS_URL=redis://localhost:6379

# Supabase Configuration (for vector storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# API Keys
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_TOKEN=your-huggingface-token

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-for-jwt-signing

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Monitoring and Analytics
ENABLE_MONITORING=true
PROMETHEUS_METRICS_ENABLED=true

# File Upload Settings
MAX_UPLOAD_SIZE=100MB
UPLOAD_PATH=/app/uploads

# Real-time Integration Settings
GOOGLE_DRIVE_CREDENTIALS_PATH=/app/credentials/google-drive.json
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret

